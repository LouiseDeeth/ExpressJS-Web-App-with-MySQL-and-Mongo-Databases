<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Page title -->
    <title>Lecturers</title>
    <style>
        table {
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            text-align: center;
        }

        /* Alternating row colours */
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Adjust the width of the first column (Lecturer ID) */
        th:nth-child(1),
        td:nth-child(1) {
            width: 90px;
        }

        /* Adjust the width of the second column (Name) */
        th:nth-child(2),
        td:nth-child(2) {
            width: 150px;
        }

        /* Adjust the width and alignment of the third column (Department ID) */
        th:nth-child(3),
        td:nth-child(3) {
            width: 120px;
            text-align: center;
        }

        /* Adjust the width and alignment of the fourth column (Action) */
        th:nth-child(4),
        td:nth-child(4) {
            width: 60px;
            text-align: center;
        }
    </style>
</head>

<body>
    <!-- Page heading -->
    <h1>Lecturers</h1>
    <!-- Link to the home page -->
    <p><a href="/">Home</a></p>
    <!-- Link to add a new lecturer -->
    <p><a href="/lecturers/add">Add Lecturer</a></p>

    <!-- Table displaying lecturers -->
    <% if (errorMessage) { %>
        <div style="color: red;"><%= errorMessage %></div>
    <% } %>
    
    <% if (lecturers.length === 0) { %>
        <p>No lecturers found.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Lecturer ID</th>
                    <th>Name</th>
                    <th>Department ID</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% lecturers.forEach((lecturer) => { %>
                    <tr>
                        <td><%= lecturer.lecturerId %></td>
                        <td><%= lecturer.name %></td>
                        <td><%= lecturer.departmentId %></td>
                        <td><a href="/lecturers/delete/<%= lecturer.lecturerId %>" onclick="return confirm('Are you sure you want to delete this lecturer?');">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>  
</body>

</html>