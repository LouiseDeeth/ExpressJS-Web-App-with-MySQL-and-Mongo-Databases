<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <style>
        table {
            border-collapse: collapse;
        }
        td {
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: center;
            padding: 8px;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        th:nth-child(1), td:nth-child(1) {
            width: 80px; 
        }
        th:nth-child(2), td:nth-child(2) {
            width: 130px;
        }
        th:nth-child(3), td:nth-child(3) {
            width: 30px; 
            text-align: center;
        }
        th:nth-child(4), td:nth-child(4) {
            width: 60px; 
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Students</h1>
    <p><a href="/students/add">Add Student</a></p>
    <p><a href="/">Home</a></p>
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.sid %></td>
                    <td><%= student.name %></td>
                    <td><%= student.age %></td>
                    <td><a href="/students/edit/<%= student.sid %>">Update</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>